@using MyEverNote.Entities
@model List<Note>
@{
    ViewBag.Title = "Index";
    Random rnd = new Random();
    
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            @Html.Partial("_PartialCategories")
        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="http://picsum.photos/900/350" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://picsum.photos/899/350" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://picsum.photos/898/350" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row">
                @foreach (Note note in Model)
                {
                    int sayi = rnd.Next(1,450);
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="https://picsum.photos/id/@sayi/700/400" alt="@note.Title"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@note.Title</a>
                                </h4>
                                <div class="font">
                                    <small>
                                        <strong>
                                            <i class="fas fa-clock"></i>@note.ModifiedOn.ToString("dd.MM.yy HH:mm")
                                        </strong>
                                    </small>
                                    <small class="float-right">
                                        <strong>
                                            <i class="fas fa-user"></i>@note.Owner.UserName
                                        </strong>
                                    </small>
                                </div>
                               
                                @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 120)
                                {
                                    <p class="card-text">@(note.Text.Substring(0, 120) + "...")</p>
                                    <p class="float-right">
                                        <a href="#" class="btn btn-light btn-sm">devamı<i class="fas fa-chevron-right"></i></a>
                                    </p>
                                }
                                else
                                {
                                    <p class="card-text">@note.Text</p>
                                }

                            </div>
                            <div class="card-footer">
                                <div>
                                    <button class="btn btn-light btn-sm float-right">
                                        <small class="text-muted">Yorumlar</small>
                                    </button>
                                    <button class="btn btn-light btn-sm">
                                        <small class="text-muted"><i class="fas fa-star text-danger"></i>@note.LikeCount</small>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>                   
                }

            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>

